const ModelController = require(process.env.PROJECT_ROOT + "/core/controller/ModelController.js");
const <%=Model%> = require(process.env.PROJECT_ROOT + "/core.rest/<%=databaseConnection%>/model/<%=Model%>.js");
const StringUtils = require(process.env.PROJECT_ROOT + "/core/helper/StringUtils.js");

class Base<%=Model%>Controller extends ModelController {

	static get model() {
		return <%=Model%>;
	}

	static get name() {
		return <%-JSON.stringify(Model)%>;
	}

	static get path() {
		return <%-JSON.stringify(StringUtils.hyphenize(Model))%>;
	}
	
}

module.exports = Base<%=Model%>Controller;